<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_matches"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <ImageView
        android:id="@+id/iv_matches_user_picture"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:src="@drawable/vivaha_logo_splash"/>

    <RelativeLayout
        android:id="@+id/relative_matches_sub"
        android:orientation="horizontal"
        android:layout_below="@+id/iv_matches_user_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:background="@drawable/layout_design"
        >

    <TextView
        android:id="@+id/tv_matches_line_up"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tv_matches_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_matches_line_up"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="9dp"
        android:hint="name"
        android:textColor="#000"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv_matches_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="gender"
        android:layout_below="@+id/tv_matches_name"
        android:layout_marginLeft="23dp"
        android:layout_alignParentStart="true"
        android:text="gender"
        android:layout_marginTop="3dp"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/tv_matches_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_matches_name"
        android:layout_alignLeft="@+id/tv_matches_gender"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="77dp"
        android:layout_marginLeft="77dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/tv_matches_gender"
        android:text="" />

    <TextView
        android:id="@+id/tv_matches_height"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_below="@+id/tv_matches_gender"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="3dp"
        android:hint="height"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/tv_matches_religion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/tv_matches_gender"
        android:layout_toEndOf="@+id/tv_matches_height"
        android:layout_toRightOf="@+id/tv_matches_name"
        android:hint="religion" />
    <TextView
        android:id="@+id/tv_matches_community"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_below="@+id/tv_matches_height"
        android:hint=""
        android:layout_marginTop="3dp"
        android:layout_marginLeft="23dp" />
    <TextView
        android:id="@+id/tv_matches_matrial_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/tv_matches_height"
        android:layout_toEndOf="@+id/tv_matches_community"
        android:layout_toRightOf="@+id/tv_matches_name"
        android:hint="" />
        <TextView
            android:id="@+id/tv_matches_lives_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_matches_community"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="23dp"

            />
        <TextView
            android:id="@+id/tv_matches_edu_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_matches_lives_in"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="23dp"

            />

    <ImageButton
        android:id="@+id/button_matches_invite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_matches_name"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-15dp"
        android:layout_marginRight="82dp"
        android:background="@drawable/button_circle_red"
        android:padding="10dp"
        android:src="@drawable/icon_person_red"
        android:textColor="#FFF" />

    <ImageButton
        android:id="@+id/button_matches_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_matches_name"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-16dp"
        android:layout_marginRight="27dp"
        android:background="@drawable/button_circle_varcolor"
        android:padding="10dp"
        android:src="@drawable/icon_message"
        android:textColor="#FFF" />
    <TextView
        android:id="@+id/tv_line_matches_down"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_matches_edu_level"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorPrimary"
        />


    </RelativeLayout>

</RelativeLayout>