<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account.Login"
    android:background="@color/colorPrimary"
    >
    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        >
        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:id="@+id/linear_iv"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            >
        <ImageView
            android:id="@+id/iv_vivahareg_logo1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@mipmap/vivaha_toolbar_logo_final"
            />
        </LinearLayout>
        <TextView
            android:id="@+id/t_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/linear_iv"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@color/colorWhite"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/et_login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/edittextdesign"
            android:layout_below="@+id/t_line1"
            android:layout_marginTop="30dp"
            android:hint="Email address"
            android:maxLines="1"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"

            />
        <EditText
            android:id="@+id/et_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/edittextdesign"
            android:layout_below="@+id/et_login_email"
            android:layout_marginTop="30dp"
            android:hint="Password"
            android:maxLines="1"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:inputType="textPassword"
            />
        <TextView
            android:id="@+id/t_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/et_login_password"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@color/colorWhite"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/button_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/button_style"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:text="login"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/t_line2"
            android:layout_marginTop="30dp"

            />
        <TextView
            android:id="@+id/tv_need_an_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_login"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="Need an account?"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:id="@+id/t_line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_need_an_account"
            android:layout_marginLeft="125dp"
            android:layout_marginRight="125dp"
            android:background="@color/colorWhite"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/button_register"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/button_style"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:text="register"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/t_line3"
            android:layout_marginTop="20dp"

            />
    </RelativeLayout>
</ScrollView>